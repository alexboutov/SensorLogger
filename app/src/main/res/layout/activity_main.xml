<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Azimuth input (degrees 0-360) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/azimuthInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Azimuth (degrees, 0-360)">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/azimuthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="e.g., 306" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Distance input (meters) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/distanceInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distance (meters)"
        android:layout_marginTop="12dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/distanceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="e.g., 13.716 (15 yards)" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Target Time input (seconds) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/targetTimeInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Time (seconds)"
        android:layout_marginTop="12dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/targetTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="e.g., 10.0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Threshold row: FAST and SLOW side by side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <!-- FAST threshold (% faster than target velocity) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fastThresholdInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:hint="FAST (% above avg)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fastThresholdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="e.g., 20" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- SLOW threshold (% slower than target velocity) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/slowThresholdInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:hint="SLOW (% below avg)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/slowThresholdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="e.g., 15" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Single START/STOP toggle button -->
    <Button
        android:id="@+id/startStopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BEGIN test swim"
        android:layout_marginTop="24dp" />

</LinearLayout>
